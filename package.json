{
    "name": "setup-kustomizegen",
    "version": "1.0.0",
    "description": "setup kustomizegen action",
    "private": true,
    "main": "dist/setup/index.js",
    "scripts": {
        "build": "tsc && ncc build -o dist/setup src/setup-kustomizegen.ts && ncc build -o dist/cleanup src/cleanup-kustomizegen.ts",
        "format": "prettier --no-error-on-unmatched-pattern --config ./.prettierrc.js --write \"**/*.{ts,yml,yaml}\"",
        "format-check": "prettier --no-error-on-unmatched-pattern --config ./.prettierrc.js --check \"**/*.{ts,yml,yaml}\"",
        "lint": "eslint --config ./.eslintrc.js \"**/*.ts\"",
        "lint:fix": "eslint --config ./.eslintrc.js \"**/*.ts\" --fix",
        "test": "jest --coverage"
    },
    "keywords": [
        "kustomizegen",
        "setup",
        "github action"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/josephrodriguez/setup-kustomizegen.git"
    },
    "author": "Jose Rodriguez",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.10.0",
        "@actions/exec": "^1.1.1",
        "@actions/http-client": "^2.1.0",
        "@actions/io": "^1.1.3",
        "@actions/tool-cache": "^2.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.3",
        "@types/node": "^20.4.5",
        "@types/tar-fs": "^2.0.1",
        "tar-fs": "^3.0.4",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "@vercel/ncc": "^0.38.1",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.9.0",
        "eslint-plugin-jest": "^27.2.3",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^29.6.2",
        "jest-circus": "^29.6.2",
        "prettier": "^3.0.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6",
        "zlib": "^1.0.5"
    }
}
